<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/private_chat_picture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/private_chat_picture_margins"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="@dimen/private_chat_picture_margins"
        android:layout_marginTop="@dimen/private_chat_picture_margins"/>

    <TextView
        android:id="@+id/private_chat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/private_chat_picture"
        android:textColor="@color/black"
        android:textSize="@dimen/home_screen_cell_name_text_size" />

    <TextView
        android:id="@+id/private_chat_last_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="6dp"
        android:textColor="@color/zipchat_blue"
        android:textSize="@dimen/home_screen_cell_last_activity_text_size" />

</RelativeLayout>