<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/chat_room_margins"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/home_screen_cell_name_text_size" />

        <TextView
            android:id="@+id/chat_room_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/chat_room_distance_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/chat_room_last_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/zipchat_blue"
        android:textSize="@dimen/home_screen_cell_last_activity_text_size" />

</RelativeLayout>