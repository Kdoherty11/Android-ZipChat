<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_room_drawer_cell_height">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_prof_pic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/chat_room_drawer_cell_icon_horizontal_margins"
        android:layout_marginRight="@dimen/chat_room_drawer_cell_icon_horizontal_margins"
        android:padding="@dimen/chat_room_drawer_cell_padding" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/user_fb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/chat_room_drawer_text_left_margin"
        android:padding="@dimen/chat_room_drawer_cell_padding"
        android:textColor="@color/chat_room_drawer_cell_text"
        android:textSize="@dimen/chat_room_drawer_cell_text"
        app:fontFamily="roboto"
        app:textWeight="medium" />

</RelativeLayout>